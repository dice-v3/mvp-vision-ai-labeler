# Vision AI Labeler Frontend - Environment Variables
# Copy this file to .env.local and update the values

# =============================================================================
# NextAuth Configuration
# =============================================================================

# NextAuth URL (must match your deployment URL)
# Note: Auth routes are at /api/auth/* for Istio routing compatibility
NEXTAUTH_URL=http://localhost:3010

# NextAuth Secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production

# =============================================================================
# Keycloak Configuration
# =============================================================================

# Keycloak Client ID
KEYCLOAK_CLIENT_ID=labeler-frontend

# Keycloak Client Secret
KEYCLOAK_CLIENT_SECRET=your-client-secret

# Keycloak Issuer URL (Realm URL)
KEYCLOAK_ISSUER=http://localhost:8080/realms/mvp-vision

# SSL Verification (set to 0 to disable for development/self-signed certs)
# WARNING: Only disable in development! In production, use valid certificates.
NODE_TLS_REJECT_UNAUTHORIZED=1

# =============================================================================
# Backend API
# =============================================================================

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:8001

# =============================================================================
# App Configuration
# =============================================================================

NEXT_PUBLIC_APP_NAME=Vision AI Labeler
NEXT_PUBLIC_APP_VERSION=0.1.0
